<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <!-- 부트스트랩 링크 복사 -->
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <a href="https://storyset.com/work"></a>
        <div><a href="https://www.flaticon.com/authors/smashicons" title="Smashicons"></a><a href="https://www.flaticon.com/" title="Flaticon"></a></div>
    </head>
    <style>
        .login{
            height : 100vh;
            display : flex;
            align-items : center;
            justify-content: center;
        }
        ._label{
            width : 35%;
        }
        ._button{
            width: 7vw;

        }
        .center{
            display : flex;
            justify-content: space-around;
        }
        .wrapper {
            height:66vh;
            width:24vw;
            background-color: white;
        }
        .wrapper1 {
            height:66vh;
            width:24vw;
            background-color: rgb(173, 185, 202);
        }

    </style>
    <body style="background-color: rgb(68,84,106); overflow-y: hidden;">
        <div class="wrapper1" style="position: absolute; top:17vh; left:26vw;">
            <b style="position: absolute; left:4vw; top:12vh; font-size:2.5vw;">레고 사출공정</b><br>
            <p style="position: absolute; left:7vw; top:22vh; font-size:25px">실시간 모니터링</p>
            <img src="/img/monitor.gif" style="position:absolute; border-width:3vw; width:20vw; top:33vh; left:2vw;
            border: 3px solid rgb(173, 185, 202); border-radius:2vw; filter:grayscale(40%);"> 
        </div>
        <div class="wrapper" style="position: absolute; top:17vh; right:26vw;">
            <div class = "container login">
                <img src="/img/blockmotion2.gif" style="position:absolute; width:20vw; height:30vh; left:2vw; top:5vh; filter:grayscale(60%);">
                <form action="/login" method="post">
                    <div class="input-group mb-3" style="width:14vw; position:absolute; left:5vw; top:39vh">
                        <input type="id" class="form-control" placeholder="ID" name="_id">
                    </div>
                    <div class="input-group mb-3" style="width:14vw; position:absolute; left:5vw; top:45vh">
                        <input type="password" class="form-control" placeholder="Password" name="_password">
                    </div>
                    <div align="center" style="position: absolute; top:52vh; left:35%">
                        <input type="submit" class="btn btn-outline-dark _button" value="login">
                    </div>
                </form>
            </div>
        </div>
        <div class="weather">
            <div class="CurrIcon">
                <img class="Icon">
            </div>
            <div class="CurrTemp"></div>
            <div class="City"></div>
        </div>
    </body>

<script>
    $(document).ready(function(){
        let weatherIcon={
            "01" : "<ion-icon name='sunny-outline'></ion-icon>",
            "02" : "fas fa-cloud-sun",
            "03" : "fas fa-cloud",
            "04" : "fas fa-cloud-meatball",
            "09" : "fas fa-cloud-sun-rain",
            "10" : "fas fa-cloud-showers-heavy",
            "11" : "fas fa-poo-storm",
            "13" : "far fa-snowflake",
            "50" : "fas fa-smog"
        }
        $.ajax({
            url : "http://api.openweathermap.org/data/2.5/weather?q=Seoul&appid=e30c70d1d9ee1045d773798f2cdabbbb&units=metric",
            dataType : "json",
            type : "GET",
            success : function(data){
                var $Icon = data.weather[0].icon;
                var $Temp = Math.floor(data.main.temp);
                var $city = data.name;
                $(".CurrIcon").append(weatherIcon[$Icon])
                $(".CurrTemp").prepend($Temp);
                $(".City").append($city);
            }
        })
    })
</script>

</html>