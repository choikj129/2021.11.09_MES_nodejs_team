      borderColor: 'white', data: ["<%=Y%>", "<%=N%>"]
    }
    var labels = ['양품', '불량품'];
    var datasets = { datasets: [dataset], labels: labels }

    var config = {
      type: 'pie', data: datasets, //데이터 셋 
      options: {
        responsive: true,
        maintainAspectRatio: false, //true 하게 되면 캔버스 width,height에 따라 리사이징된다. 
        legend: {
